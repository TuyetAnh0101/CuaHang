<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:padding="20dp"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/bg_card_rounded">
        <!-- Tên gói -->
        <TextView
            android:id="@+id/tvTenGoi"
            android:text="🔥 GÓI TIN VIP 🔥"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1E8141"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvMoTa"
            android:text="Tiếp cận hàng ngàn người mỗi ngày. Ưu tiên hiển thị, đăng tin nhanh chóng, thu hút người xem."
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Thông tin chi tiết -->
        <TextView
            android:id="@+id/tvGia"
            android:text="💰 Giá: 100.000đ | Giảm: 20.000đ"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVat"
            android:text="📊 VAT: 10%"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSoLuong"
            android:text="🔢 Số lượng còn: 5"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBillingCycle"
            android:text="🔁 Chu kỳ: Theo tháng"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvGioiHan"
            android:text="📌 Giới hạn bài viết: 10"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvThoiGian"
            android:text="⏳ Thời gian sử dụng: 30 ngày"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNote"
            android:text="📝 Ghi chú: Không hoàn tiền sau khi mua"
            android:textSize="14sp"
            android:textColor="#888"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Nút mua dùng MaterialCardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnMuaGoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#1E8141">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MUA GÓI NGAY"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

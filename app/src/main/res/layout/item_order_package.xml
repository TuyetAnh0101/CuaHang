<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gói đăng tin VIP"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2B572E" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng: 1"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#444444" />

    <TextView
        android:id="@+id/tvThanhTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 60.000đ"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:textColor="#444444" />

    <Button
        android:id="@+id/btnBuyAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mua lại"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:backgroundTint="#102F12"
        android:visibility="gone" />
</LinearLayout>

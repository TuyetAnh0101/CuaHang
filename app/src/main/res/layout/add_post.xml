<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Tiêu đề -->
        <EditText
            android:id="@+id/edtTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="📝 Tiêu đề bài đăng"
            android:inputType="textCapSentences"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Mô tả -->
        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="📋 Mô tả ngắn"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Nội dung -->
        <EditText
            android:id="@+id/edtNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:hint="📄 Nội dung chi tiết"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Giá -->
        <EditText
            android:id="@+id/edtGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="💰 Giá sản phẩm (VNĐ)"
            android:inputType="number"
            android:textSize="16sp"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Danh mục -->
        <Spinner
            android:id="@+id/spinnerDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <!-- Ảnh xem trước -->
        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginBottom="10dp" />

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ Chọn ảnh"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Nút đăng bài -->
        <Button
            android:id="@+id/btnDangBai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📤 Đăng bài"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:clipToPadding="false">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin gói đăng ký"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên gói"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Spinner chọn loại phụ -->
        <Spinner
            android:id="@+id/spinnerSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:spinnerMode="dropdown"
            android:prompt="@string/prompt_subcategory" />

        <!-- Spinner chọn danh mục -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/edtPackageDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá gốc"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá giảm"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtVAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VAT (%)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn vị tính (ví dụ: tháng, lần)"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trạng thái (ví dụ: active/inactive)"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>

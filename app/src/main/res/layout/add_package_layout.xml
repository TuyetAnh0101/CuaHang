<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_rounded"
        android:elevation="4dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ Thêm gói đăng ký"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Các EditText cơ bản -->
        <EditText
            android:id="@+id/edtPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên gói"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtPackageDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá bán"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giảm giá "
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtVAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VAT (%)"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn vị tính"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng"
            android:inputType="number"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trạng thái"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />
        <!-- Phân loại gói -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại gói"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerPackageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Danh mục chính và phụ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục con"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Gói miễn phí hay không -->
        <CheckBox
            android:id="@+id/checkboxIsFree3Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gói miễn phí"
            android:textColor="#2B572E"
            android:layout_marginTop="16dp" />

        <!-- Chu kỳ thanh toán -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chu kỳ thanh toán"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerBillingCycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Giới hạn sử dụng -->
        <EditText
            android:id="@+id/edtMaxPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số bài đăng tối đa"
            android:inputType="number"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtMaxCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số ký tự tối đa mỗi bài"
            android:inputType="number"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtMaxImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số ảnh tối đa mỗi bài"
            android:inputType="number"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <!-- Ngày bắt đầu và kết thúc -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian áp dụng"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày bắt đầu (dd/MM/yyyy)"
            android:focusable="false"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày kết thúc (dd/MM/yyyy)"
            android:focusable="false"
            android:background="@drawable/bg_edittext_outline"
            android:padding="14dp"
            android:textSize="16sp" />

        <!-- Ảnh đại diện -->
        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📸 Chọn ảnh"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2B572E"
            android:textColor="#FFFFFF"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_rounded" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerImages"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>

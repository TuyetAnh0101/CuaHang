<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subcategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="72dp"> <!-- Để không bị FAB che nội dung -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSubCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fabAddSubCategory"
        android:clipToPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddSubCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Thêm subcategory"
        android:src="@android:drawable/ic_input_add" />
</RelativeLayout>

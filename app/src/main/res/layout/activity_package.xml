<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/packages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ProgressBar hiển thị khi loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge" />

        <!-- Thông báo khi danh sách rỗng -->
        <TextView
            android:id="@+id/txtEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có gói đăng ký nào"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone"
            android:textColor="#757575"
            android:elevation="3dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách gói đăng ký -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPackage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingVertical="4dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <!-- Nút thêm gói đăng ký -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddPackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="Thêm gói"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@android:color/white"
        app:backgroundTint="#2E7D32"
        app:elevation="6dp" />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="24dp"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:backgroundTint="@android:color/white">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📂 Thêm SubCategory"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Tên SubCategory -->
        <EditText
            android:id="@+id/edtSubCategoryName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên SubCategory"
            android:inputType="textCapWords"
            android:background="@drawable/bg_edittext_outline"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:textColorHint="#9E9E9E"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Nhãn spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thuộc danh mục"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2B572E"
            android:layout_marginBottom="8dp" />

        <!-- Spinner chọn Category -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_spinner_outline"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </LinearLayout>
</ScrollView>

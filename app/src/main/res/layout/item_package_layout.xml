<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- Ảnh chính -->
        <ImageView
            android:id="@+id/imgFirst"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_rounded"
            android:contentDescription="Hình ảnh gói"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Nội dung thông tin gói -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenGoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gói VIP 3 tháng"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#2B572E"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtGiaGoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá gốc: 120.000đ"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtGiaGiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá KM: 99.000đ"
                android:textColor="#D32F2F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtChuKy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chu kỳ: Theo tháng"
                android:textColor="#000000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtPackageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại gói: VIP"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ: 01/07/2025 đến 31/12/2025"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL còn: 50"
                android:textColor="#4CAF50"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtGioiHan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới hạn: 3 bài, 500 ký tự/bài, 3 ảnh"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gói miễn phí 3 post: Có"
                android:textColor="#009688"
                android:textStyle="italic"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/checkboxSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Nút sửa/xóa -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:src="@drawable/edit1"
                android:contentDescription="Sửa"
                android:background="?selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:contentDescription="Xóa"
                android:src="@drawable/delete1"
                android:background="?selectableItemBackgroundBorderless" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="20dp"
        android:elevation="4dp">

        <!-- Tên gói -->
        <TextView
            android:id="@+id/tvTenGoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔥 GÓI TIN VIP 🔥"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E8141"
            android:layout_marginBottom="12dp" />

        <!-- Hình ảnh -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHinhAnh"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📄 Mô tả: ..."
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="10dp" />

        <!-- Thông tin chi tiết -->
        <TextView android:id="@+id/tvGiaGoc" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="💰 Giá gốc:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvGiaGiam" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="🔻 Giá giảm:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvVAT" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="VAT:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvSoLuong" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số lượng:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvBillingCycle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chu kỳ:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvMaxPosts" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Giới hạn bài viết:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvMaxCharacters" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số ký tự tối đa:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvMaxImages" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số ảnh tối đa:" android:textSize="16sp" android:layout_marginBottom="6dp" />
        <TextView android:id="@+id/tvPackageType" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Loại gói:" android:textSize="16sp" android:layout_marginBottom="6dp" />

        <!-- Ghi chú -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Ghi chú:"
            android:textSize="14sp"
            android:textColor="#888"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="12dp">

            <!-- Thêm vào giỏ -->
            <Button
                android:id="@+id/btnThemVaoGio"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Thêm vào giỏ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#FFA726"
                 />

            <!-- Mua ngay -->
            <Button
                android:id="@+id/btnMuaNgay"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="MUA NGAY"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#1E8141"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
